ORIG_PN="sqliteodbc"

DESCRIPTION="ODBC SQLite3 driver"
HOMEPAGE="http://www.ch-werner.de/sqliteodbc/"
SRC_URI="http://www.ch-werner.de/sqliteodbc/${ORIG_PN}-${PV}.tar.gz"

PATCH_URI="
	0.88-ldflags.patch
	0.88-odbcinst-soname.patch
"

DISTCLEANFILES="aclocal.m4"

src_compile() {
	cd ${S}
	cygautoreconf
	lndirs
	cd ${B}
	cygconf --disable-static
	cygmake
}

src_install() {
	cd ${B}
	dodir /usr/lib
	cyginstall
}
